version=$2
shift 2

options=()
shared=disabled
while [ ! -z ${1+x} ]; do
    case $1 in
    -shared)
        shared=enabled
        ;;
    *)
        ;;
    esac
    options+=($1)
    shift
done

enter_git_repository lua https://github.com/franko/lua.git "v${version}-6"
build_and_install meson -Dshared="$shared" "${options[@]}"
