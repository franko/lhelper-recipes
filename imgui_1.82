#!/bin/bash

options=()
while [ ! -z ${1+x} ]; do
    case $1 in
    -window=* | -renderer=*)
        options+=("${1/#-/-D}")
        ;;
    *)
        options+=("$1")
        ;;
    esac
    shift
done

declare_dependency glew
declare_dependency freetype2
declare_dependency sdl2 -threads -opengl

enter_git_repository https://github.com/franko/imgui.git "v${version}-lhelper"
build_and_install meson "${options[@]}"
