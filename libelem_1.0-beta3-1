enter_git_repository https://github.com/franko/elementary-plotlib.git "v$version"

options=("-Dfox=false" "-Dlua=false" "-Dtests=false")
while [ ! -z ${1+x} ]; do
    case $1 in
        -fox)
            options[0]="-Dfox=true"
            ;;
	-lua)
	    options[1]="-Dlua=true"
	    ;;
	*)
	    options+=("$1")
    esac
    shift
done

build_and_install meson "${options[@]}"
