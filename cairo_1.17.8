#!/bin/bash

availables=( \
    # font backends:
    dwrite fontconfig freetype \
    # surface backends:
    png quartz tee xcb xlib xlib-xcb xml zlib \
    # other
    glib spectre symbol-lookup
)

dependency pixman
enter_git_repository "git://anongit.freedesktop.org/git/cairo" "$version"

options=(-Dtests=disabled -Dgtk2-utils=disabled -Dgtk_doc=false)
enables=()
needs_zlib=no
while [ ! -z ${1+x} ]; do
    case $1 in
    -fontconfig)
        enables+=(fontconfig)
        dependency fontconfig
        ;;
    -freetype)
        enables+=(freetype)
        dependency freetype2
        ;;
    -dwrite)
        enables+=(dwrite)
        ;;
    -xml)
        enables+=(xml)
        needs_zlib=yes
        ;;
    -pdf)
        needs_zlib=yes
        ;;
    -png)
        enables+=(png)
        ;;
    -xlib)
        enables+=(xlib)
        dependency x11
        dependency xext
        dependency xrender
        ;;
    -quartz)
        enables+=(quartz)
        ;;
    *)
        options+=("$1")
        ;;
    esac
    shift
done

if [[ $needs_zlib == yes ]]; then
    enables+=(zlib)
    dependency zlib
fi

for opt in "${availables[@]}"; do
    if [[ " ${enables[*]} " == *" $opt "* ]]; then
        options+=(-D$opt=enabled)
    else
        options+=(-D$opt=disabled)
    fi
done

build_and_install meson "${options[@]}"
